<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.inventory">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FinalProjectRubyChauhan">
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".activities.LoginActivity" />
        <activity
            android:name=".activities.MainActivity"
            android:label="Inventory Management"
            android:theme="@style/Theme.FinalProjectRubyChauhan.ActionBar" />
        <activity android:name=".activities.AddProductActivity"
            android:label="@string/title_add_product"
            android:theme="@style/Theme.FinalProjectRubyChauhan.ActionBar"/>
    </application>

</manifest>